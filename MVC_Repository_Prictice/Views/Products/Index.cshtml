@model IEnumerable<MVC_Repository_Prictice.Models.Products>

@{
    ViewBag.Title = "Index";
}

<h2>Product List</h2>
<div class="well well-lg" >
    @using(Html.BeginForm("ProductsOfCategory", "Products", FormMethod.Post,new {@class="form-inline" }))
    {
        <div class="form-group" >
            <label class="control-label" >Category</label>
            @Html.DropDownList("category", (List<SelectListItem>)ViewBag.CategorySelectList,new {@class="form-control" })
        </div>
        <div class="form-group" >
            <input type="submit" class="btn btn-default" value="submit" />
        </div>
    }
</div>
<p>
    @Html.ActionLink("Create New", "Create","Products", null, new { @class = "btn btn-success" })
</p>
<table class="table table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categories.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantityPerUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.UnitsOnOrder)
        </th>
        
        
        <th>Optional</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categories.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuantityPerUnit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.UnitsOnOrder)
        </td>



        <td>
            <div class="btn-group">
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }, new { @class = "btn btn-default" })
                @Html.ActionLink("Details", "Details", new { id = item.ProductID }, new { @class = "btn btn-default" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductID }, new { @class = "btn btn-default" })
            </div>
        </td>
    </tr>
}

</table>
